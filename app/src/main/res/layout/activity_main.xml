<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/common_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <com.baichuan.otherclass.AutoNextLineLinearlayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_main_calculator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="doClick"
                    android:text="@string/btn_main_calculator" />

                <Button
                    android:id="@+id/btn_main_listview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="doClick"
                    android:text="@string/btn_main_listview" />

                <Button
                    android:id="@+id/btn_main_listview2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="doClick"
                    android:text="@string/btn_main_listview2"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/btn_main_picker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="doClick"
                    android:text="@string/btn_main_picker" />

                <Button
                    android:id="@+id/btn_main_gridview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="doClick"
                    android:text="@string/btn_main_gridview" />

                <Button
                    android:id="@+id/btn_main_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="doClick"
                    android:text="@string/btn_main_spinner" />

                <Button
                    android:id="@+id/btn_main_progressbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="doClick"
                    android:text="@string/btn_main_progressbar" />

                <Button
                    android:id="@+id/btn_main_webview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="doClick"
                    android:text="@string/btn_main_webview" />

                <Button
                    android:id="@+id/btn_main_fragment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="doClick"
                    android:text="@string/btn_main_fragment"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/btn_main_viewpager"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="doClick"
                    android:text="@string/btn_main_viewpager"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/btn_main_viewflipper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="doClick"
                    android:text="@string/btn_main_viewflipper"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/btn_main_scrollview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="doClick"
                    android:text="@string/btn_main_scrollview"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/btn_main_gallery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="doClick"
                    android:text="@string/btn_main_gallery"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/btn_main_seekbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="doClick"
                    android:text="@string/btn_main_seekbar"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/btn_main_asynctask"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="doClick"
                    android:text="@string/btn_main_asynctask"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/btn_main_news"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="doClick"
                    android:text="@string/btn_main_news"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/btn_main_sharedpreferences"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="doClick"
                    android:text="@string/btn_main_sharedpreferences"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/btn_main_sqlite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="doClick"
                    android:text="@string/btn_main_sqlite"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/btn_main_file"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="doClick"
                    android:text="@string/btn_main_file"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/btn_main_contentProvider"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="doClick"
                    android:text="@string/btn_main_contentProvider"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/btn_main_broadcastreceiver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="doClick"
                    android:text="@string/btn_main_broadcastreceiver"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/btn_main_service"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="doClick"
                    android:text="@string/btn_main_service"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/btn_main_systemService"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="doClick"
                    android:text="@string/btn_main_systemService"
                    android:textAllCaps="false" />

            </com.baichuan.otherclass.AutoNextLineLinearlayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>